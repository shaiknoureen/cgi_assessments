import logo from './logo.svg';
import './App.css';
import React from 'react';
import welcome from "./components/welcome";

function App(){
  const name = "shaik noureen"
  const year = new Date().getFullYear();
  const isLoggedIn = false;
  const fruits = ["apple","banana","mango"]
  return(
    <div>
    <welcome />{/* using the welcome component */}
    </div>

   <div style={{ textAlign:"center",marginTop:"50px"}}>
   <h1>{isLoggedIn ? "Welcome Back!":"please Log In"}</h1>
   <h1>Hello,{name}!</h1>
   <p>welcome to the first jsx page.</p>
   <p> Current Year:{year}</p>
   <h2>Fruit List</h2>
   <ul>
   {fruits.map((fruit,index)=>(<li key={index}>{fruit}</li>))}
   </ul>
   </div>
   );


}
import logo from './logo.svg';
import './App.css';
import React,{useState} from 'react';
import Welcome from "./components/Welcome";

function App(){
  const [show,setShow] = useState(false);
  const name = "shaik noureen"
  const year = new Date().getFullYear();
  const isLoggedIn = false;
  const fruits = ["apple","banana","mango"]
  return(
    <div>
    <button onClick = {()=>setShow(!show)}>{show ?"hide components":"show components"}</button>
    {show &&(
    <>
    <Welcome name="shaik" />
    <Welcome name="noureen" />{/* using the welcome component */}
    </>
    )}

    </div>


   );


}

export default App;
import React,{useState,useEffect} from 'react';
function Welcome(props){
 const [count,setCount] = useState(0);
 useEffect( () =>{
 console.log(`welcome component for ${props.name} mounted`);
  } ,[]);
  useEffect( () =>{
 console.log(`counter for ${props.name} updated to ${count}`);
  } ,[count]);
  useEffect( () =>{
  return () =>{
 console.log(`welcome component for ${props.name} unmounted`);
 };
  } ,[]);
 return(
  <div style={{ textAlign:"center",marginTop:"50px"}}>
  <h1>Welcome,{props.name}</h1>
  <h2>counter:{count}</h2>
  <p> it is reusable component.</p>
  <button onClick ={()=>setCount(count+1)}>Increase</button>
  <button onClick ={()=>setCount(count-1)}>Decrease</button>
  </div>
);

}
export default Welcome;

export default App;
