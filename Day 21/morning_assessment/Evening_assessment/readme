import React,{useState}from 'react';
export default function FormListing() {
  const [name,setName] = useState("");
  const [list,setList] = useState([]);
  const handleSubmit = (e) =>{e.preventDefault();
  if (name.trim() ===""){
  alert("please enter a name");
  return;
  }
  setList([list,name]);
  setName("");
  };
  const handleDelete = (index)=>{
  const newList = list.filter((_,i)=>i!==index);
  setList(newList);
  };
  return(
  <div style = {{padding:"20px",fontFamily:"Arial"}}>
  <h2> Forms Listing Example</h2>
  <form onSubmit={handleSubmit}>
  <input type = "text" placeholder = "enter name" value = {name} onChange={(e)=> setName(e.target.value)}style={{padding:"8px",marginRight:"10px"}}/>
  <button type="submit" style={{padding :"8px"}}>Add</button>
  </form>
  <ul style = {{marginTop:"20px"}}>
  {list.map((item, index)=>(<li key={index} style={{marginBottom :"8px",display:"flex",alignItems:"center"}}>{item}<button onClick={()=>handleDelete(index)}
  style={{marginLeft:"10px",padding:"4px 8px",background:"red",color:"white",border:"none",cursor:"pointer"}}>Delete</button></li>
  ))}
  </ul>
  </div>
);
}
app.js
import logo from './logo.svg';

